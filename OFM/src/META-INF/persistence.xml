<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="ofmPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>com.net.multiway.ofm.entities.DataGraphic</class>
        <class>com.net.multiway.ofm.entities.Parameter</class>
        <class>com.net.multiway.ofm.entities.DataEvent</class>
        <class>com.net.multiway.ofm.entities.Occurrence</class>
        <class>com.net.multiway.ofm.entities.Device</class>
        <class>com.net.multiway.ofm.entities.Limit</class>
        <class>com.net.multiway.ofm.entities.User</class>
        <class>com.net.multiway.ofm.entities.Data</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/ofm?zeroDateTimeBehavior=convertToNull"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.password" value="root"/>     
        </properties>
    </persistence-unit>
</persistence>
